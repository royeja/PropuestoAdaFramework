<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="INSERTAR ALUMNO"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/insertar_alumno_nombre"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Nombre"
        android:singleLine="true"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/insertar_alumno_apellido"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Apellido"
        android:singleLine="true"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/insertar_alumno_dni"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="DNI"
        android:singleLine="true"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/insertar_alumno_edad"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Edad"
        android:singleLine="true"
        android:textSize="25dp" />

    <Spinner
        android:id="@+id/insertar_alumno_activo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal" />


    <DatePicker
        android:layout_marginTop="25dp"
        android:id="@+id/insertar_alumno_fecha"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:calendarViewShown="false" />


    <Button
        android:id="@+id/btnInsertar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="Insertar" />

</LinearLayout>